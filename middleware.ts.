// middleware.ts
import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

export function middleware(request: NextRequest) {
  // 1. Check if the user has the Memberful cookie
  const memberfulCookie = request.cookies.get('memberful_session')

  // 2. Define which pages are "Locked" (The Living Atlas) [cite: 29]
  // Any URL starting with /atlas requires a subscription
  if (request.nextUrl.pathname.startsWith('/atlas')) {
    
    if (!memberfulCookie) {
      // 3. If no cookie, redirect to the "Last Chance" page [cite: 30]
      return NextResponse.redirect(new URL('/subscribe/last-chance', request.url))
    }
  }

  return NextResponse.next()
}